{
    "extends": "standard",
    "plugins": [
        "standard",
        "promise"
    ],
    "env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"rules": {
		"indent": [2, 4],
		"quotes": [2, "single"],
		"space-before-function-paren": 1,
		"semi" :[2, "always"],
		"comma-dangle": 1,
		"space-before-function-paren": 1,
		"no-var": 1,
		"no-cond-assign": 1,
		"no-console": 1,
		"no-constant-condition": 1,
		"no-dupe-keys": 1,
		"no-empty": 1,
		"no-empty-character-class": 1,
		"no-extra-boolean-cast": 1,
		"no-extra-semi": 1,
		"no-func-assign": 1,
		"no-inner-declarations": 1,
		"no-invalid-regexp": 1,
		"no-irregular-whitespace": 1,
		"no-unreachable": 1,
		"use-isnan": 1,
		"valid-typeof": 1,
		"no-implied-eval": 1,
		"curly": 1,
		"consistent-return": 1,
		"default-case": 1,
		"dot-notation": 1,
		"eqeqeq": 1,
		"guard-for-in": 1,
		"no-alert": 1,
		"no-undefined": 0,
		"no-unused-vars": 1,
		"no-use-before-define": 1,
		"no-mixed-requires": 1,
		"camelcase": 1,
		"comma-spacing": 1,
		"comma-style": 1,
		"eol-last": 1,
		"new-cap": 1,
		"no-mixed-spaces-and-tabs": 1,
		"no-multiple-empty-lines": 1,
		"semi-spacing": 1,
		"no-spaced-func": 1,
		"no-trailing-spaces": 1,
		"operator-assignment": 1,
		"keyword-spacing": 1,
		"space-before-blocks": 1,
		"object-curly-spacing": 1,
		"space-infix-ops": 1
	}
}