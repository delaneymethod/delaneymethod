		{% set recommendations = craft.entries.section('recommendation').id(ids | join(', ')).fixedOrder(true).find() %}
		{% if recommendations | length %}
		<section class="section" id="recommendations">
			<div class="container">
				<div class="row">
					{% for recommendation in recommendations %}
					<div class="col s12 m12 {% if (recommendations | length) == 1 %}l12{% else %}l6{% endif %}">
						<blockquote>
							{{ recommendation.blockquote }}
							<cite>{{ recommendation.title }}</cite>
						</blockquote>
					</div><!-- END .col //-->
					{% endfor %}
				</div><!-- END .row //-->
			</div>
		</section>
		{% endif %}